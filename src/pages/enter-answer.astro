---
// Component imports
import { Layout } from "@globals"
---

<Layout title="Wedding Invitation">
	<section class="p-6 flex-1 flex flex-col justify-between">
		<!-- Welcome -->
		<script type="text/javascript">
			function validateForm() {
				const lat = 55.523564
				const longt = 37.658542

				let number1 = document.forms["enter-answer-form"]["number1"].value
				let number2 = document.forms["enter-answer-form"]["number2"].value
				if (number1 == lat && number2 == longt) {
					console.log("Great")
					window.location = "/secret-address"
					return true
				}
				if (number1 != lat || number2 != longt) {
					alert("Неправильно, подумай и попробуй еще раз")
					return false
				}
			}
		</script>
		<div
			class="max-w-xl mx-auto flex flex-col justify-center flex-1 space-y-10"
		>
			<div class="flex flex-col gap-y-2 space-y-2 text-center">
				<h2 class="text-4xl font-extrabold dark:text-white">
					Попробуй отгадать место...
				</h2>
				<div class="flex flex-col gap-y-3">
					<p class="text-lg font-regular dark:text-white">
						Если ввденные числа правильные, то ты узнаешь место проведения
						свадьбы. Вводи числа через точку
					</p>
				</div>
			</div>
			<form
				name="enter-answer-form"
				method="post"
				onsubmit="return validateForm()"
				action="/secret-address"
			>
				<div class="flex flex-wrap gap-x-8 justify-center">
					<div class="relative z-0 w-40px mb-6 group">
						<input
							type="text"
							name="number1"
							id="name"
							class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer"
							placeholder=" "
							required
						/>
						<label
							for="floating_email"
							class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"
							>Введи первое число</label
						>
					</div>
					<div class="relative z-0 w-40px mb-6 group">
						<input
							type="text"
							name="number2"
							id="name"
							class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer"
							placeholder=" "
							required
						/>
						<label
							for="floating_email"
							class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"
							>Введи второе число</label
						>
					</div>
				</div>
				<div class="flex flex-row justify-center">
					<input
						type="submit"
						value="Узнать место"
						class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-[15px] text-[16px] px-10 py-4 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"
					/>
				</div>
			</form>
		</div>
	</section>
</Layout>
